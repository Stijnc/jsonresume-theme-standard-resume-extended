<h2>Contact Information</h2>
<section class="contact">
	{{#if url}}
	<p>
		<span>Website:</span>
		<a href="{{url}}" target="_blank" rel="noopener">{{url}}</a>
	</p>
	{{/if}}

	{{#if email}}
		<p>
			<span>Email:</span>
			<a href="mailto:{{email}}" target="_blank" rel="noopener noreferrer">{{email}}</a>
		</p>
	{{/if}}

	{{#if phone}}
		<p>
			<span>Phone:</span> {{phone}}
		</p>
	{{/if}}
	
	{{> profiles }}
</section>
